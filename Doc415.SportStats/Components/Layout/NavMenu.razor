@rendermode InteractiveServer

<div class="navmenu">
    <input type="checkbox" title="Menu expand/collapse toggle" id="navmenu-toggle" class="navmenu-icon" />
    <label for="navmenu-toggle" class="navmenu-icon"><FluentIcon Value="@(new Icons.Regular.Size20.Navigation())" Color="Microsoft.FluentUI.AspNetCore.Components.Color.Fill" /></label>
    <nav class="sitenav" aria-labelledby="main-menu" onclick="document.getElementById('navmenu-toggle').click();">
        <FluentNavMenu Id="main-menu" Collapsible="true" Width="250" Title="Navigation menu" @bind-Expanded="expanded">
            <FluentNavLink Href="/" Match="NavLinkMatch.All" Icon="@(new Icons.Regular.Size20.Home())" IconColor="Microsoft.FluentUI.AspNetCore.Components.Color.Accent">Home</FluentNavLink>
            <FluentNavLink Href="administration" Icon="@(new Icons.Regular.Size20.WeatherPartlyCloudyDay())" IconColor="Microsoft.FluentUI.AspNetCore.Components.Color.Accent">Administration</FluentNavLink>
            <FluentNavLink Href="reports" Icon="@(new Icons.Regular.Size20.WeatherPartlyCloudyDay())" IconColor="Microsoft.FluentUI.AspNetCore.Components.Color.Accent">Reports</FluentNavLink>
            <FluentNavLink Href="gamesession" Icon="@(new Icons.Regular.Size20.WeatherPartlyCloudyDay())" IconColor="Microsoft.FluentUI.AspNetCore.Components.Color.Accent">GameSession</FluentNavLink>
        </FluentNavMenu>
    </nav>
</div>

@code {
    private bool expanded = true;
    
}
